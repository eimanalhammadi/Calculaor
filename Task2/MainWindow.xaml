<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Central container -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            
          <!-- Title-->
            <TextBlock Text="Simple Calcularor"
                     FontSize="20" FontWeight="Bold"
                     HorizontalAlignment="Center" Margin="0,0,0,16"/>
            <!-- Input 1-->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Value 1:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtA" Width="200" Height="32"
                         VerticalContentAlignment="Center"
                         ToolTip="Enyer first number"
                         TextChanged="AnyInput_TextChanged"/>
            </StackPanel>
            
            <!-- Input 2 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Value 2:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtB" Width="200" Height="32"
                         VerticalContentAlignment="Center"
                         ToolTip="Enyer second number"
                         TextChanged="AnyInput_TextChanged"/>
            </StackPanel>


            <!-- Buttons row-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8">
                <Button x:Name="btnAdd" Content="+" Width="50" Height="32" Click="btnAdd_Click" Margin="4,0"/>
                <Button x:Name="btnSub" Content="-" Width="50" Height="32" Click="btnSub_Click" Margin="4,0"/>
                <Button x:Name="btnMul" Content="x" Width="50" Height="32" Click="btnMul_Click" Margin="4,0"/>
                <Button x:Name="btnDiv" Content="/" Width="50" Height="32" Click="btnDiv_Click" Margin="4,0"/>
                <Button x:Name="btnClear" Content="Clear" Width="60" Height="32" Click="btnClear_Click" Margin="4,0"/>
            </StackPanel>
            
            
            <!-- Result -->
            <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                <TextBlock Text="Result:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="txtResult" Width="200" Height="32"
                         VerticalContentAlignment="Center" 
                         IsReadOnly="True"/>

            </StackPanel>


        </StackPanel>

    </Grid>
</Window>
